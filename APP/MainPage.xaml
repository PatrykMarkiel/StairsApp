<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="APP.MainPage">

    <VerticalStackLayout Spacing="25" Padding="30">
        <Entry x:Name="HkEntry" Placeholder="Wysokość Hk (mm)" Keyboard="Numeric"/>
        <Entry x:Name="LkEntry" Placeholder="Długość Lk (mm)" Keyboard="Numeric"/>
        <Button Text="Oblicz" Clicked="OnSubmitClicked"/>
        <Label x:Name="ResultLabel" IsVisible="False"/>
        <GraphicsView x:Name="StairsLayout" IsVisible="True" HeightRequest="300" />
    </VerticalStackLayout>

</ContentPage>
